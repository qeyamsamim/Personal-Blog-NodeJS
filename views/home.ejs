<%- include("partials/header") %>

<h1>Home</h1>
<p class="mb-4"> <%= homeContent %></p>

<div class="row text-center">
    <% posts.forEach(function(post) {%>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title"><%= post.postTitle %></h2>
                    <p class="card-text">
                        <%= post.postContent.substring(0, 150) + " ..." %> 
                        <a href="/posts/<%= post.postTitle%>"> Read More</a>
                    </p>
                </div>
            </div>
        </div>
    <%});%>
</div>

<%- include("partials/footer") %>